module NML::Grammar::Parsers::Block
  grammar Table3
    include Row

    rule table3
      head
      body
      <NML::Grammar::Nodes::Block::Table>
    end

    rule head
      '    ' row "\n"
      <NML::Grammar::Nodes::Block::Table::Head>
    end

    rule body
      ('    ' row ("\n" / !.))+
      <NML::Grammar::Nodes::Block::Table::Body>
    end
  end
end
