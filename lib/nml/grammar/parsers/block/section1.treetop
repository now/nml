module NML::Grammar::Parsers::Block
  grammar Section1
    include Blocks2
    include Inlines1
    include Section2

    rule section1
      'ยง ' title
      blocks:blocks2
      sections
      <NML::Grammar::Nodes::Block::Section>
    end

    rule title
      '' inlines:inlines1
      <NML::Grammar::Nodes::Block::Title>
    end

    rule sections
      (blankline+
       section:section2)*
    end
  end
end
