module NML::Grammar::Parsers::Block
  grammar Common
    rule blankline
      "\n"
    end

    rule space
      (!"\n" [\s])+
    end

    rule nonnewline
      (!"\n" .)+
    end

    # NOTE: We would like to use [₁₂₃₄₅₆₇₈₉₀], but until we provide
    # Treetop with a Unicode-enabled string, this won’t work.
    rule enumerationlabel
      ('₁' / '₂' / '₃' / '₄' / '₅' / '₆' / '₇' / '₈' / '₉' / '₀') '   '
    end

    rule itemizationlabel
      '•   '
    end
  end
end
