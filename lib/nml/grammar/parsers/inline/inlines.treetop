module NML::Grammar::Parsers::Inline
  grammar Inlines
    rule inlines
      inline+
      <NML::Grammar::Nodes::Inline::Inlines>
    end

    rule inline
      text
    end

    rule text
      (!('‹' / endinline) [^\n])+
      <NML::Grammar::Nodes::Inline::Text>
    end

    rule endinline
      endcode /
      endemphasis
    end

    rule endcode
      '›'
    end

    rule endemphasis
      '/'
    end
  end
end
