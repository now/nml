module NML::Grammar::Parsers
  grammar Inlines
    include Inline::Code
    include Inline::Emphasis
    include Inline::Group
    include Inline::Inlines

    rule inlines
      super
    end

    rule inline
      code /
      emphasis /
      group /
      text
    end

    rule emphasizedinline
      code /
      group /
      emphasizedtext
    end

    rule groupedinline
      code /
      emphasis /
      group /
      groupedtext
    end
  end
end
